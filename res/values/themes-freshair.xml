<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KeyboardTheme.FRESHAIR">

        <!-- If you are a PM, you don't need to touch the following part of this file. Consult a developer if you have to modify any of the item below -->
        <!-- following are references of styles defined within the rest of this file -->
        <item name="keyboardStyle">@style/Keyboard.FRESHAIR</item>
        <item name="keyboardViewStyle">@style/KeyboardView.FRESHAIR</item>
        <item name="mainKeyboardViewStyle">@style/MainKeyboardView.FRESHAIR</item>
        <item name="emojiPalettesViewStyle">@style/EmojiPalettesView.FRESHAIR</item>
        <item name="bigEmojiPalettesViewStyle">@style/BigEmojiPalettesView.FRESHAIR</item>
        <item name="stickerPalettesViewStyle">@style/StickerPalettesView.FRESHAIR</item>
        <item name="moreKeysKeyboardStyle">@style/MoreKeysKeyboard.FRESHAIR</item>
        <!-- Note: ICS theme uses the same style for both general more keys and action more keys. -->
        <item name="moreKeysKeyboardViewStyle">@style/MoreKeysKeyboardView.FRESHAIR</item>
        <item name="moreKeysKeyboardViewForActionStyle">@style/MoreKeysKeyboardView.FRESHAIR</item>
        <item name="suggestionStripViewStyle">@style/SuggestionStripView.FRESHAIR</item>
        <item name="suggestionWordStyle">@style/SuggestionWord.FRESHAIR</item>
        <item name="settingsPanelStyle">@style/SettingsPannel.FRESHAIR</item>
        <item name="fontSelectPanelStyle">@style/FontSelectPannel.FRESHAIR</item>

        <!-- reserved area ends here -->
    </style>

    <style name="Keyboard.FRESHAIR" parent="Keyboard"></style>

    <style name="KeyboardView.FRESHAIR" parent="KeyboardView">
        <item name="keyLabelSize">@fraction/config_key_label_ratio_pink</item>
        <item name="keyHintLetterRatio">@fraction/config_key_hint_letter_ratio_pink</item>
        <item name="keyLargeLetterRatio">@fraction/config_key_large_letter_ratio_pink</item>
        <item name="keyLabelOffCenterRatio">-55%</item>
        <item name="keyHintLabelRatio">@fraction/config_key_hint_label_ratio_pink</item>
        <item name="keyHintLabelOffCenterRatio">275%</item>
        <item name="keyPreviewTextRatio">@fraction/config_key_preview_text_ratio_pink</item>
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="functionalTextColor">#FFFFFFFF</item>
        <item name="keyHintLetterColor">#7fffffff</item>
        <item name="keyHintLabelColor">#7fffffff</item>
        <item name="keyPreviewTextColor">#272727</item>
        <item name="keyboardDominantColor">#159b6c</item>
    </style>

    <style name="MainKeyboardView.FRESHAIR" parent="KeyboardView.FRESHAIR">
        <item name="fontName">normal</item>
        <item name="hintTypeface">bold</item>
        <item name="keyLetterSize">@fraction/config_key_letter_ratio_pink</item>
        <item name="keyPreviewHeight">@dimen/config_key_preview_height</item>
        <item name="keyPreviewOffset">-5dp</item>
        <item name="keyPreviewPaddingBottom">0dp</item>
        <item name="keyPreviewAnimatorType">flash</item>
        <item name="gestureFloatingPreviewTextColor">#272727</item>
        <item name="gestureFloatingPreviewColor">#dddddd</item>
        <item name="gestureTrailColor">#8cffaf</item>
        <item name="languageOnSpacebarTextColor">#7fffffff</item>
        <item name="languageOnSpacebarTextShadowRadius">1.0</item>
        <item name="languageOnSpacebarTextShadowColor">#7fffffff</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
        <item name="keyFuncTextShadowRadius">0</item>
        <item name="keyFuncTextShadowDx">2.0</item>
        <item name="keyFuncTextShadowDy">6.0</item>
        <item name="keyFuncTextShadowColor">#80000000</item>
    </style>
    <!--
         Though {@link EmojiPalettesView} doesn't extend {@link KeyboardView}, some views inside it,
         for instance delete button, need themed {@link KeyboardView} attributes.
    -->
    <style name="EmojiPalettesView.FRESHAIR" parent="MainKeyboardView.FRESHAIR">
        <item name="android:background">#ff181818</item>
        <item name="categoryPageIndicatorColor">#BBFFFFFF</item>
        <item name="categoryPageIndicatorBackground">#33FFFFFF</item>
    </style>

    <style name="MoreKeysKeyboardView.FRESHAIR" parent="KeyboardView.FRESHAIR">
        <item name="keyTextColor">#272727</item>
        <item name="keyTextPressedColor">#272727</item>
        <item name="keyLetterSize">@fraction/config_morekeys_key_letter_ratio</item>
        <item name="fontName">normal</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
    </style>

    <style name="SuggestionStripView.FRESHAIR" parent="KeyboardView.FRESHAIR">
        <item name="colorValidTypedWord">#ffffff</item>
        <item name="colorTypedWord">#b8d5d1</item>
        <item name="colorAutoCorrect">#ffffff</item>
        <item name="colorSuggested">#b8d5d1</item>
    </style>

    <style name="SettingsPannel.FRESHAIR" parent="KeyboardView.FRESHAIR">
        <item name="settingsTextColor">#bfffffff</item>
    </style>

    <style name="FontSelectPannel.FRESHAIR" parent="KeyboardView.FRESHAIR">
        <item name="fontDividerColor">#bfffffff</item>
        <item name="fontItemSelectedColor">#26ffffff</item>
        <item name="fontTextColor">#bfffffff</item>
    </style>

    <style name="SuggestionWord.FRESHAIR" parent="SuggestionWord">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/config_suggestion_text_size_pink</item>
    </style>

    <style name="MoreKeysKeyboard.FRESHAIR" parent="Keyboard.FRESHAIR">
        <item name="keyboardTopPadding">0%p</item>
        <item name="keyboardBottomPadding">0%p</item>
        <item name="horizontalGap">0%p</item>
        <item name="touchPositionCorrectionData">@null</item>
    </style>

    <style name="BigEmojiPalettesView.FRESHAIR" parent="EmojiPalettesView.FRESHAIR" />

    <style name="StickerPalettesView.FRESHAIR">
        <item name="android:background">#ff181818</item>
    </style>

</resources>