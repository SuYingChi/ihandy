<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KeyboardTheme.GREY">

        <!-- If you are a PM, you don't need to touch the following part of this file. Consult a developer if you have to modify any of the item below -->
        <!-- following are references of styles defined within the rest of this file -->
        <item name="keyboardStyle">@style/Keyboard.GREY</item>
        <item name="keyboardViewStyle">@style/KeyboardView.GREY</item>
        <item name="mainKeyboardViewStyle">@style/MainKeyboardView.GREY</item>
        <item name="emojiPalettesViewStyle">@style/EmojiPalettesView.GREY</item>
        <item name="bigEmojiPalettesViewStyle">@style/BigEmojiPalettesView.GREY</item>
        <item name="stickerPalettesViewStyle">@style/StickerPalettesView.GREY</item>
        <item name="moreKeysKeyboardStyle">@style/MoreKeysKeyboard.GREY</item>
        <!-- Note: ICS theme uses the same style for both general more keys and action more keys. -->
        <item name="moreKeysKeyboardViewStyle">@style/MoreKeysKeyboardView.GREY</item>
        <item name="moreKeysKeyboardViewForActionStyle">@style/MoreKeysKeyboardView.GREY</item>
        <item name="suggestionStripViewStyle">@style/SuggestionStripView.GREY</item>
        <item name="suggestionWordStyle">@style/SuggestionWord.GREY</item>
        <item name="moreSuggestionStyle">@style/HSMoreSuggestionsScrollView.GREY</item>
        <!-- reserved area ends here -->
    </style>

    <style name="Keyboard.GREY" parent="Keyboard"></style>

    <style name="KeyboardView.GREY" parent="KeyboardView">
        <item name="keyLabelSize">@fraction/config_key_label_ratio_pink</item>
        <item name="keyHintLetterRatio">@fraction/config_key_hint_letter_ratio_pink</item>
        <item name="keyHintLetterPaddingRight">@dimen/config_key_hint_letter_padding_right_grey</item>
        <item name="keyHintLetterPaddingTop">@dimen/config_key_hint_letter_padding_top_grey</item>
        <item name="keyLargeLetterRatio">@fraction/config_key_large_letter_ratio_pink</item>
        <item name="keyLabelOffCenterRatio">-80%</item>
        <item name="keyHintLabelRatio">@fraction/config_key_hint_label_ratio_pink</item>
        <item name="keyHintLabelOffCenterRatio">@fraction/config_key_hint_label_off_center_ratio</item>
        <item name="keyPreviewTextRatio">@fraction/config_key_preview_text_ratio_pink</item>
        <item name="keyPopupHintLetterPaddingRight">@dimen/config_key_popup_hint_letter_padding_right_grey</item>
        <item name="keyPopupHintLetterPaddingBottom">@dimen/config_key_popup_hint_letter_padding_bottom_grey</item>
        <item name="keyTextColor">#FF37474f</item>
        <item name="functionalTextColor">#FF68747a</item>
        <item name="keyHintLetterColor">#FF68747a</item>
        <item name="keyHintLabelColor">#FF68747a</item>
        <item name="keyPreviewTextColor">#FFFFFFFF</item>
    </style>

    <style name="MainKeyboardView.GREY" parent="KeyboardView.GREY">
        <item name="keyTypeface">normal</item>
        <item name="hintTypeface">normal</item>
        <item name="keyLetterSize">@fraction/config_key_letter_ratio_pink</item>
        <item name="keyPreviewHeight">@dimen/config_key_preview_height</item>
        <item name="keyPreviewOffset">-5dp</item>
        <item name="keyPreviewPaddingBottom">0dp</item>
        <item name="keyPreviewAnimatorType">flash</item>
        <item name="gestureFloatingPreviewTextColor">#ffFFFFFF</item>
        <item name="gestureFloatingPreviewColor">#ff1ea0cd</item>
        <item name="gestureTrailColor">#ff1ea0cd</item>
        <item name="languageOnSpacebarTextColor">#FF68747a</item>
        <item name="languageOnSpacebarTextShadowRadius">1.0</item>
        <item name="languageOnSpacebarTextShadowColor">#FF68747a</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#FF68747a</item>
        <item name="keyFuncTextShadowRadius">0</item>
        <item name="keyFuncTextShadowDx">2.0</item>
        <item name="keyFuncTextShadowDy">6.0</item>
        <item name="keyFuncTextShadowColor">#FF68747a</item>
    </style>
    <!--
         Though {@link EmojiPalettesView} doesn't extend {@link KeyboardView}, some views inside it,
         for instance delete button, need themed {@link KeyboardView} attributes.
    -->
    <style name="EmojiPalettesView.GREY" parent="MainKeyboardView.GREY">
        <item name="android:background">#ffeceff1</item>
        <item name="categoryPageIndicatorColor">#ff1ea0cd</item>
        <item name="categoryPageIndicatorBackground">#ffd1d6d9</item>
    </style>

    <style name="MoreKeysKeyboardView.GREY" parent="KeyboardView.GREY">
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="keyTextPressedColor">#FFFFFFFF</item>
        <item name="keyLetterSize">@fraction/config_morekeys_key_letter_ratio</item>
        <item name="keyTypeface">normal</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80FFFFFF</item>
    </style>

    <style name="SuggestionStripView.GREY" parent="KeyboardView.GREY">
        <item name="colorValidTypedWord">#ff1ea0cd</item>
        <item name="colorTypedWord">#ff68747a</item>
        <item name="colorAutoCorrect">#ff1ea0cd</item>
        <item name="colorSuggested">#ff68747a</item>
    </style>

    <style name="HSMoreSuggestionsScrollView.GREY" parent="KeyboardView.GREY">
        <item name="moreSuggestionBgColor">#ffeceff1</item>
    </style>

    <style name="SuggestionWord.GREY" parent="SuggestionWord">
        <item name="android:textColor">#ffeceff1</item>
        <item name="android:textSize">@dimen/config_suggestion_text_size_pink</item>
    </style>

    <style name="MoreKeysKeyboard.GREY" parent="Keyboard.GREY">
        <item name="keyboardTopPadding">0%p</item>
        <item name="keyboardBottomPadding">0%p</item>
        <item name="horizontalGap">0%p</item>
        <item name="touchPositionCorrectionData">@null</item>
    </style>

    <style name="BigEmojiPalettesView.GREY" parent="EmojiPalettesView.GREY" />

    <style name="StickerPalettesView.GREY">
        <item name="android:background">#ffeceff1</item>
    </style>

</resources>