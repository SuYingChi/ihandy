<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KeyboardTheme.DARK">

        <!-- If you are a PM, you don't need to touch the following part of this file. Consult a developer if you have to modify any of the item below -->
        <!-- following are references of styles defined within the rest of this file -->
        <item name="keyboardStyle">@style/Keyboard.DARK</item>
        <item name="keyboardViewStyle">@style/KeyboardView.DARK</item>
        <item name="mainKeyboardViewStyle">@style/MainKeyboardView.DARK</item>
        <item name="emojiPalettesViewStyle">@style/EmojiPalettesView.DARK</item>
        <item name="bigEmojiPalettesViewStyle">@style/BigEmojiPalettesView.DARK</item>
        <item name="stickerPalettesViewStyle">@style/StickerPalettesView.DARK</item>
        <item name="moreKeysKeyboardStyle">@style/MoreKeysKeyboard.DARK</item>
        <!-- Note: ICS theme uses the same style for both general more keys and action more keys. -->
        <item name="moreKeysKeyboardViewStyle">@style/MoreKeysKeyboardView.DARK</item>
        <item name="moreKeysKeyboardViewForActionStyle">@style/MoreKeysKeyboardView.DARK</item>
        <item name="suggestionStripViewStyle">@style/SuggestionStripView.DARK</item>
        <item name="suggestionWordStyle">@style/SuggestionWord.DARK</item>
        <item name="moreSuggestionPanelStyle">@style/MoreSuggestionPannel.DARK</item>
        <item name="settingsPanelStyle">@style/SettingsPannel.DARK</item>
        <item name="fontSelectPanelStyle">@style/FontSelectPannel.DARK</item>

        <!-- reserved area ends here -->
    </style>

    <style name="Keyboard.DARK" parent="Keyboard"></style>

    <style name="KeyboardView.DARK" parent="KeyboardView">
        <item name="keyLabelSize">@fraction/config_key_label_ratio_pink</item>
        <item name="keyHintLetterRatio">@fraction/config_key_hint_letter_ratio_pink</item>
        <item name="keyLargeLetterRatio">@fraction/config_key_large_letter_ratio_pink</item>
        <item name="keyLabelOffCenterRatio">-55%</item>
        <item name="keyHintLabelRatio">@fraction/config_key_hint_label_ratio_pink</item>
        <item name="keyHintLabelOffCenterRatio">275%</item>
        <item name="keyPreviewTextRatio">@fraction/config_key_preview_text_ratio_pink</item>
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="functionalTextColor">#FFFFFFFF</item>
        <item name="keyHintLetterColor">#FF222222</item>
        <item name="keyHintLabelColor">#FF222222</item>
        <item name="keyPreviewTextColor">#FFFFFFFF</item>
    </style>

    <style name="MainKeyboardView.DARK" parent="KeyboardView.DARK">
        <item name="keyTypeface">normal</item>
        <item name="hintTypeface">bold</item>
        <item name="keyLetterSize">@fraction/config_key_letter_ratio_pink</item>
        <item name="keyPreviewHeight">@dimen/config_key_preview_height</item>
        <item name="keyPreviewOffset">-5dp</item>
        <item name="keyPreviewPaddingBottom">0dp</item>
        <item name="keyPreviewAnimatorType">flash</item>
        <item name="gestureFloatingPreviewTextColor">#1ea0cd</item>
        <item name="gestureFloatingPreviewColor">#EA000000</item>
        <item name="gestureTrailColor">#1ea0cd</item>
        <item name="languageOnSpacebarTextColor">#FF222222</item>
        <item name="languageOnSpacebarTextShadowRadius">1.0</item>
        <item name="languageOnSpacebarTextShadowColor">#FF222222</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
        <item name="keyFuncTextShadowRadius">0</item>
        <item name="keyFuncTextShadowDx">2.0</item>
        <item name="keyFuncTextShadowDy">6.0</item>
        <item name="keyFuncTextShadowColor">#80000000</item>
    </style>
    <!--
         Though {@link EmojiPalettesView} doesn't extend {@link KeyboardView}, some views inside it,
         for instance delete button, need themed {@link KeyboardView} attributes.
    -->
    <style name="EmojiPalettesView.DARK" parent="MainKeyboardView.DARK">
        <item name="android:background">#ff181818</item>
        <item name="categoryPageIndicatorColor">#BBFFFFFF</item>
        <item name="categoryPageIndicatorBackground">#33FFFFFF</item>
    </style>

    <style name="MoreKeysKeyboardView.DARK" parent="KeyboardView.DARK">
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="keyTextPressedColor">#FFFFFFFF</item>
        <item name="keyLetterSize">@fraction/config_morekeys_key_letter_ratio</item>
        <item name="keyTypeface">normal</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
    </style>

    <style name="SuggestionStripView.DARK" parent="KeyboardView.DARK">
        <item name="colorValidTypedWord">#ff1ea0cd</item>
        <item name="colorTypedWord">#FFFFFFFF</item>
        <item name="colorAutoCorrect">#ff1ea0cd</item>
        <item name="colorSuggested">#FFFFFFFF</item>
    </style>

    <style name="MoreSuggestionPannel.DARK" parent="KeyboardView.DARK">
        <item name="android:background">#ff181818</item>
    </style>

    <style name="SettingsPannel.DARK" parent="KeyboardView.DARK">
        <item name="android:background">#ff181818</item>
        <item name="settingsTextColor">#ffffffff</item>
    </style>

    <style name="FontSelectPannel.DARK" parent="KeyboardView.DARK">
        <item name="android:background">#ff181818</item>
        <item name="fontDividerColor">#33ffffff</item>
        <item name="fontTextColor">#ffffffff</item>
    </style>

    <style name="SuggestionWord.DARK" parent="SuggestionWord">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/config_suggestion_text_size_pink</item>
    </style>

    <style name="MoreKeysKeyboard.DARK" parent="Keyboard.DARK">
        <item name="keyboardTopPadding">0%p</item>
        <item name="keyboardBottomPadding">0%p</item>
        <item name="horizontalGap">0%p</item>
        <item name="touchPositionCorrectionData">@null</item>
    </style>

    <style name="BigEmojiPalettesView.DARK" parent="EmojiPalettesView.DARK" />

    <style name="StickerPalettesView.DARK">
        <item name="android:background">#ff181818</item>
    </style>

</resources>