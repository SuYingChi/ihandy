<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KeyboardTheme.POP">

        <!-- If you are a PM, you don't need to touch the following part of this file. Consult a developer if you have to modify any of the item below -->
        <!-- following are references of styles defined within the rest of this file -->
        <item name="keyboardStyle">@style/Keyboard.POP</item>
        <item name="keyboardViewStyle">@style/KeyboardView.POP</item>
        <item name="mainKeyboardViewStyle">@style/MainKeyboardView.POP</item>
        <item name="emojiPalettesViewStyle">@style/EmojiPalettesView.POP</item>
        <item name="bigEmojiPalettesViewStyle">@style/BigEmojiPalettesView.POP</item>
        <item name="stickerPalettesViewStyle">@style/StickerPalettesView.POP</item>
        <item name="moreKeysKeyboardStyle">@style/MoreKeysKeyboard.POP</item>
        <!-- Note: ICS theme uses the same style for both general more keys and action more keys. -->
        <item name="moreKeysKeyboardViewStyle">@style/MoreKeysKeyboardView.POP</item>
        <item name="moreKeysKeyboardViewForActionStyle">@style/MoreKeysKeyboardView.POP</item>
        <item name="suggestionStripViewStyle">@style/SuggestionStripView.POP</item>
        <item name="suggestionWordStyle">@style/SuggestionWord.POP</item>
        <item name="settingsPanelStyle">@style/SettingsPannel.POP</item>
        <item name="fontSelectPanelStyle">@style/FontSelectPannel.POP</item>

        <!-- reserved area ends here -->
    </style>

    <style name="Keyboard.POP" parent="Keyboard"></style>

    <style name="KeyboardView.POP" parent="KeyboardView">
        <item name="keyLabelSize">@fraction/config_key_label_ratio_pink</item>
        <item name="keyHintLetterPaddingRight">@dimen/config_key_hint_letter_padding_right_pop</item>
        <item name="keyHintLetterRatio">@fraction/config_key_hint_letter_ratio_pink</item>
        <item name="keyLargeLetterRatio">@fraction/config_key_large_letter_ratio_pop</item>
        <item name="keyLabelOffCenterRatio">-55%</item>
        <item name="keyHintLabelRatio">@fraction/config_key_hint_label_ratio_pink</item>
        <item name="keyHintLabelOffCenterRatio">225%</item>
        <item name="keyPreviewTextRatio">@fraction/config_key_preview_text_ratio_pop</item>
        <item name="keyTextColor">#010101</item>
        <item name="functionalTextColor">#010101</item>
        <item name="keyHintLetterColor">#EA000000</item>
        <item name="keyHintLabelColor">#EA000000</item>
        <item name="keyPreviewTextColor">#010101</item>
        <item name="keyboardDominantColor">#e9699a</item>
    </style>

    <style name="MainKeyboardView.POP" parent="KeyboardView.POP">
        <item name="fontName">bd_cartoon_shout</item>
        <item name="hintTypeface">bold</item>
        <item name="keyLetterSize">@fraction/config_key_letter_ratio_pop</item>
        <item name="keyPreviewHeight">@dimen/config_key_preview_height</item>
        <item name="keyPreviewOffset">-5dp</item>
        <item name="keyPreviewPaddingBottom">0dp</item>
        <item name="keyPreviewAnimatorType">flash</item>
        <item name="gestureFloatingPreviewTextColor">#010101</item>
        <item name="gestureFloatingPreviewColor">#ffea00</item>
        <item name="gestureTrailColor">#ffff37</item>
        <item name="languageOnSpacebarTextColor">#EA000000</item>
        <item name="languageOnSpacebarTextShadowRadius">1.0</item>
        <item name="languageOnSpacebarTextShadowColor">#EA000000</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
        <item name="keyFuncTextShadowRadius">0</item>
        <item name="keyFuncTextShadowDx">2.0</item>
        <item name="keyFuncTextShadowDy">6.0</item>
        <item name="keyFuncTextShadowColor">#80000000</item>
    </style>
    <!--
         Though {@link EmojiPalettesView} doesn't extend {@link KeyboardView}, some views inside it,
         for instance delete button, need themed {@link KeyboardView} attributes.
    -->
    <style name="EmojiPalettesView.POP" parent="MainKeyboardView.POP">
        <item name="categoryPageIndicatorColor">#BBFFFFFF</item>
        <item name="categoryPageIndicatorBackground">#33FFFFFF</item>
    </style>

    <style name="MoreKeysKeyboardView.POP" parent="KeyboardView.POP">
        <item name="keyTextColor">#EA000000</item>
        <item name="keyTextPressedColor">#EA000000</item>
        <item name="keyLetterSize">@fraction/config_morekeys_key_letter_ratio</item>
        <item name="fontName">bold</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">0.0</item>
        <item name="keyTextShadowDy">0.0</item>
        <item name="keyTextShadowColor">#EA000000</item>
    </style>

    <style name="SuggestionStripView.POP" parent="KeyboardView.POP">
        <item name="colorValidTypedWord">#ffffff</item>
        <item name="colorTypedWord">#000000</item>
        <item name="colorAutoCorrect">#ffffff</item>
        <item name="colorSuggested">#000000</item>
    </style>

    <style name="SettingsPannel.POP" parent="KeyboardView.POP">
        <item name="settingsTextColor">#bfffffff</item>
    </style>

    <style name="FontSelectPannel.POP" parent="KeyboardView.POP">
        <item name="fontDividerColor">#bfffffff</item>
        <item name="fontItemSelectedColor">#26ffffff</item>
        <item name="fontTextColor">#bfffffff</item>
    </style>

    <style name="SuggestionWord.POP" parent="SuggestionWord">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/config_suggestion_text_size_pink</item>
    </style>

    <style name="MoreKeysKeyboard.POP" parent="Keyboard.POP">
        <item name="keyboardTopPadding">0%p</item>
        <item name="keyboardBottomPadding">0%p</item>
        <item name="horizontalGap">0%p</item>
        <item name="touchPositionCorrectionData">@null</item>
    </style>

    <style name="BigEmojiPalettesView.POP" parent="EmojiPalettesView.POP" />

    <style name="StickerPalettesView.POP">
        <item name="android:background">#ff181818</item>
    </style>

</resources>