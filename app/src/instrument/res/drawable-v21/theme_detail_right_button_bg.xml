<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">

    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/theme_detail_bg_radius_corner" />
                    <gradient android:startColor="@color/theme_button_text_color_light" android:endColor="#4378ff"/>
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">

                    <corners android:radius="@dimen/theme_detail_bg_radius_corner" />
                    <solid android:color="@color/theme_button_text_color_disable" />
                </shape>
            </item>

        </selector>
    </item>

</ripple>