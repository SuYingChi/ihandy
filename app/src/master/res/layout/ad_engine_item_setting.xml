<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:latin="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/settings_background_color" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settings_main_title_bg_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/settings_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/settings_main_title_bg_color"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/main_settings_title_padding_vertical"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/main_settings_title_padding_vertical"
            android:text="Settings"
            android:textColor="@color/settings_main_title_color"
            android:textSize="@dimen/main_settings_title_text_size">
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ll_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference
                android:id="@+id/custom_boost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                latin:defaultValue="true"
                latin:preferenceKey="@string/custom_boost_setting_preference_key"
                latin:titlestring="Auto Boost"
                android:visibility="gone">
            </com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference>
            <com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference
                android:id="@+id/input_security_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                latin:defaultValue="true"
                latin:preferenceKey="@string/input_security_check_setting_preference_key"
                latin:titlestring="Auto Security Check"
                android:visibility="gone">
            </com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference>
            <com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference
                android:id="@+id/optimize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                latin:defaultValue="true"
                latin:preferenceKey="@string/optimize_setting_preference_key"
                latin:titlestring="Auto Optimization"
                android:visibility="gone">
            </com.ihs.inputmethod.uimodules.ui.settings.activities.SwitchPreference>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/settings_divder_line_color" >
            </TextView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>