<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_bg_radius" />
            <solid android:color="@color/guide_bg_disable_color" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_bg_radius" />
            <solid android:color="@color/guide_bg_ripple_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_bg_radius" />
            <solid android:color="@color/guide_bg_normal_color" />
        </shape>
    </item>

</selector>