<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.ihs.inputmethod.uimodules.widget.RoundedCornerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rcl_corner_radius="2dp">

        <com.acb.adadapter.ContainerView.AcbNativeAdIconView
            android:id="@+id/ad_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ad_engine_app_icon" />
    </com.ihs.inputmethod.uimodules.widget.RoundedCornerLayout>

    <ImageView
        android:id="@+id/ad_call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_ad_label" />

    <FrameLayout
        android:id="@+id/ad_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
