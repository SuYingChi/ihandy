<?xml version="1.0" encoding="utf-8"?>
<com.honeycomb.launcher.lucky.view.NoNetworkView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/lucky_award_bg">

    <TextView
        android:id="@+id/lucky_game_no_network_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:textSize="26sp"
        android:text="@string/lucky_game_award_no_network_description"
        android:textStyle="bold"
        app:typeface="@string/proxima_nova_semibold"
        android:textColor="#fff100" />
    <FrameLayout
        android:id="@+id/lucky_game_no_network_container"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal|bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/lucky_award_nonetwork_planet" />

        <ImageView
            android:id="@+id/lucky_game_no_network_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/lucky_award_nonetwork_flag"/>

        <ImageView
            android:id="@+id/lucky_game_no_network_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/lucky_award_nonetwork_wifi" />

    </FrameLayout>

</com.honeycomb.launcher.lucky.view.NoNetworkView>
