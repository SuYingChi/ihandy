<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="11dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/ad_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ad_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:riv_corner_radius="@dimen/config_key_preview_offset_electric"/>

    </FrameLayout>


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp">

        <TextView
            android:id="@+id/ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:fontFamily="@string/roboto_medium"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ad_rating_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/search_ad_store_rating_text"
                android:textSize="12sp"
                android:fontFamily="ArialMT"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ad_rating_star"
                android:layout_marginLeft="3dp"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/store_star"
                android:layout_marginStart="3dp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>