<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/lucky_award_bg"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/lucky_game_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/lucky_game_ad_icon"
        android:layout_toRightOf="@+id/lucky_game_ad_icon"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Rlash Royale" />

    <com.honeycomb.launcher.view.TypefacedTextView
        android:id="@+id/lucky_game_ad_body"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lucky_game_ad_title"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/lucky_game_ad_icon"
        android:layout_toRightOf="@+id/lucky_game_ad_icon"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="Rlash Royale xxxxxx....." />

    <FrameLayout
        android:id="@+id/lucky_game_ad_image_bg"
        android:layout_width="396dp"
        android:layout_height="221dp"
        android:layout_below="@+id/lucky_game_ad_icon"
        android:layout_centerHorizontal="true">

        <com.acb.adadapter.ContainerView.AcbNativeAdPrimaryView
            android:id="@+id/lucky_game_ad_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginBottom="3.5dp"
            android:layout_marginEnd="17dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="17dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="35dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lucky_award_ad_frame" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lucky_game_ad_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lucky_game_ad_image_bg"
        android:layout_alignRight="@+id/lucky_game_ad_image_bg"
        android:layout_alignTop="@+id/lucky_game_ad_image_bg"
        android:layout_below="@+id/lucky_game_ad_icon"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp" />

    <com.honeycomb.launcher.lucky.view.StrokeTextView
        android:id="@+id/lucky_game_ad_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lucky_game_ad_image_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/lucky_action_btn"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.acb.adadapter.ContainerView.AcbNativeAdIconView
        android:id="@+id/lucky_game_ad_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/lucky_game_ad_image_bg"
        android:layout_alignStart="@+id/lucky_game_ad_image_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible" />
</RelativeLayout>