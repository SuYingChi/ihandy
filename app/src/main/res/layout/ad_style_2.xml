<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_engine_optimize_ad_admob_card_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.appcloudbox.ads.base.ContainerView.AcbNativeAdPrimaryView
                android:id="@+id/ad_cover_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:background="@drawable/bottom_round_white_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_style_theme_card_bottom_container_height"
            android:orientation="horizontal">

            <net.appcloudbox.ads.base.ContainerView.AcbNativeAdIconView
                android:id="@+id/ad_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:maxHeight="25dp"
                android:maxWidth="25dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ad_engine_app_icon"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="title"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/ad_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:text="subTitle"
                    android:textColor="#7f000000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/ad_choice"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="9dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="20"
                android:padding="7dp"
                android:text="download"
                android:textColor="#ffffff"
                android:background="@drawable/charging_ad_button_bg"
                android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ad_engine_ad_mark"/>
</RelativeLayout>