<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_rectangle_white_bg"
    android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/enable_permission_auto_reply_animated_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_message"
        style="@style/DesignDialogContentBody"
        android:padding="@dimen/design_dialog_content_area_padding"
        android:layout_marginTop="0dp"
        android:text="@string/turn_on_rainbowKey" />


    <TextView
        android:id="@+id/btn_positive_single"
        style="@style/DesignDialogSingleActionButton"
        android:layout_marginTop="@dimen/design_base_padding"
        android:text="@string/trun_on_rainbowKey_btn"
        android:background="@color/blue"
        />

</LinearLayout>