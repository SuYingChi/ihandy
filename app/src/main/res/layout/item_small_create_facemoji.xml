<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/facemoji_default_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/theme_card_recycler_view_card_margin"
    app:cardBackgroundColor="#976ba9"
    app:cardCornerRadius="@dimen/corner_radius">


    <TextView
        android:id="@+id/facemoji_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/theme_create_plus"
        android:gravity="center"
        android:text="@string/custom_theme_create"
        android:textColor="#7fffffff"
        android:textSize="14sp" />

</android.support.v7.widget.CardView>