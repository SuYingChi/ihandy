<?xml version="1.0" encoding="utf-8"?>
<com.honeycomb.launcher.lucky.view.BoxView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lucky_game_ad_action_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/material_compat_toolbar_bg">

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/lucky_award_close"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/lucky_game_ad_box_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lucky_game_ad_light_small_circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/lucky_award_light_circle"/>

        <ImageView
            android:id="@+id/lucky_game_ad_light_circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/lucky_award_light_circle"/>

        <ImageView
            android:id="@+id/lucky_game_ad_box_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="100dp"
            android:background="@drawable/lucky_award_golden_box_cover"/>

        <ImageView
            android:id="@+id/lucky_game_ad_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/lucky_award_golden_box_body"/>

        <ImageView
            android:id="@+id/lucky_game_ad_box_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="75dp"
            android:background="@drawable/lucky_award_light"/>

        <ImageView
            android:id="@+id/lucky_game_ad_box_pearl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="85dp"
            android:background="@drawable/lucky_award_bright_point"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="95dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_left"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_left"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_left3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="65dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_left"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_right"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_right"/>

        <ImageView
            android:id="@+id/lucky_game_ad_ribbon_right3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/lucky_award_breakpoint_right"/>
    </FrameLayout>

</com.honeycomb.launcher.lucky.view.BoxView>
