<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/config_default_keyboard_height"
    android:clickable="true"
    android:orientation="vertical">

    <com.ihs.inputmethod.uimodules.settings.SettingsViewPager
        android:id="@+id/settingsViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:layout_marginTopPercent="5%" />

    <com.ihs.inputmethod.uimodules.widget.DotsRadioGroup
        android:id="@+id/settingsViewPager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" />
</android.support.percent.PercentRelativeLayout>