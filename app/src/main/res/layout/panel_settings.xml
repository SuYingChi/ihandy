<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/config_default_keyboard_height"
    android:clickable="true"
    android:orientation="vertical">


    <com.viewpagerindicator.IconPageIndicator
        android:id="@+id/iconIndicator"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />

    <com.ihs.inputmethod.uimodules.settings.SettingsViewPager
        android:id="@+id/settingsViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iconIndicator"
        app:layout_marginTopPercent="5%" />

</android.support.percent.PercentRelativeLayout>