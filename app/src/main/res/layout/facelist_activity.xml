<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/face_moji_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navigation_bar_facelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/facelist_close_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facelist_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_button" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Switch Face"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/facelist_edit_btn_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/facelist_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Edit"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>


    <GridView
        android:id="@+id/face_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center" />

    <TextView
        android:id="@+id/face_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Delete"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

</LinearLayout>