<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white_standard"
    app:cardCornerRadius="@dimen/common_round_corner"
    app:cardPreventCornerOverlap="false"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/background_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/common_round_corner"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/background_new_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/common_round_corner"/>

    <ImageView
        android:id="@+id/ad_call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_ad_label"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>