<?xml version="1.0" encoding="utf-8"?>
<com.ihs.inputmethod.uimodules.ui.sticker.StickerPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sticker_category_tab_host"
            android:layout_width="0dp"
            android:layout_height="@dimen/config_suggestions_strip_height"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1" />

        <com.ihs.inputmethod.uimodules.stickerplus.PlusButton
            android:id="@+id/plus_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/sticker_panel_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.ihs.inputmethod.uimodules.ui.sticker.StickerPanelView>