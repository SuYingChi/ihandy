<?xml version="1.0" encoding="utf-8"?>
<com.ihs.inputmethod.uimodules.ui.customize.view.LockerThemePage
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/customize_toolbar_height"
        android:paddingLeft="12dp"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/customize_toolbar_elevation">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/call_flash"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="14sp"
            android:textAllCaps="true"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/locker_theme_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.ihs.inputmethod.uimodules.ui.customize.view.LockerThemePage>
