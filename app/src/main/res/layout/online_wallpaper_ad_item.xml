<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_rounded_corner_bg"
    android:elevation="@dimen/card_elevation"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <net.appcloudbox.ads.base.ContainerView.AcbNativeAdPrimaryView
            android:id="@+id/theme_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <FrameLayout
            android:id="@+id/ad_choice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <net.appcloudbox.ads.base.ContainerView.AcbNativeAdIconView
            android:id="@+id/theme_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="8dp" />

        <com.ihs.inputmethod.uimodules.ui.customize.view.TypefacedTextView
            android:id="@+id/theme_description_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/theme_icon"
            android:layout_toLeftOf="@+id/action_btn"
            android:layout_toRightOf="@id/theme_icon"
            android:layout_toStartOf="@+id/action_btn"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description of the theme jasDKJKadkkjafjkFKSJSKFJKSJKFSKFKKJJKASJFKJAKSFJKLASJFKASJKK"
            android:textColor="#ff666666"
            android:textSize="11sp"
            app:typeface="@string/proxima_nova_regular"
            tools:ignore="HardcodedText,SmallSp" />

        <Button
            android:id="@+id/action_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="install now"
            android:textAllCaps="true"
            android:textColor="#ff448aff"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>
