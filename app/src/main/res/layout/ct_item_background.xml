<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardBackgroundColor="#282832"
    app:cardCornerRadius="@dimen/common_round_corner"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">


    <com.ihs.inputmethod.uimodules.ui.theme.ui.view.RoundedImageView
        android:id="@+id/custom_theme_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/custom_theme_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:riv_corner_radius="@dimen/common_round_corner" />

    <com.ihs.keyboardutils.view.HSGifImageView
        android:id="@+id/custom_theme_item_gif_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/custom_theme_item_check_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/custom_theme_item_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/custom_theme_preview_placeholder"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/custom_theme_item_new_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />
</FrameLayout>
