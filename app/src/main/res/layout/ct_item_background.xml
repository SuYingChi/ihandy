<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/custom_theme_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        app:riv_corner_radius="@dimen/common_round_corner" />

    <com.ihs.keyboardutils.view.HSGifImageView
        android:id="@+id/custom_theme_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/common_round_corner" />

    <ImageView
        android:id="@+id/custom_theme_item_check_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/custom_theme_item_new_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/custom_theme_item_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/custom_theme_preview_placeholder"
        android:visibility="gone"
        app:riv_corner_radius="@dimen/common_round_corner" />
</FrameLayout>