<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/facemoji_keyboard_pager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <com.ihs.inputmethod.uimodules.ui.facemoji.FacemojiViewPager
        android:id="@+id/facemoji_keyboard_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<joykeyboard.inputmethod.panels.facemoji.FacemojiCategoryPageIndicatorView-->
        <!--android:id="@+id/facemoji_category_page_id_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"/>-->

        <com.ihs.inputmethod.uimodules.widget.KeyboardProgressView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:id="@+id/share_progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/keyboard_progress_view_bg"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        style="?attr/suggestionStripViewStyle"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_suggestions_strip_height"
        android:orientation="horizontal" >

        <TabHost
            android:id="@+id/facemoji_keyboard_category_tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none" >
                <!-- add scroll -->
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="14dp"
                    android:gravity="center"
                    android:divider="@null" />
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp" >

                <View
                    android:id="@+id/facemoji_keyboard_dummy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </FrameLayout>
        </TabHost>

        <ImageButton
            android:id="@+id/facemoji_keyboard_delete"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="14dp"
            android:hapticFeedbackEnabled="false"
            android:soundEffectsEnabled="false" />
    </FrameLayout>

</LinearLayout>