<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/font_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/theme_card_recycler_view_card_margin"
        android:clipToPadding="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/common_round_corner"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingBottom="0dp">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/font_content"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                app:layout_aspectRatio="300%"
                app:layout_widthPercent="100%" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/font_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/more_menu_image"
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/menu_more_selector" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/font_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp" />

            </RelativeLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/font_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:elevation="3dp"
        android:src="@drawable/preview_keyboard_delete"
        android:visibility="gone" />
</RelativeLayout>