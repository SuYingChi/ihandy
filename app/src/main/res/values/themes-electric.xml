<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KeyboardTheme.ELECTRIC">

        <!-- If you are a PM, you don't need to touch the following part of this file. Consult a developer if you have to modify any of the item below -->
        <!-- following are references of styles defined within the rest of this file -->
        <item name="keyboardStyle">@style/Keyboard.ELECTRIC</item>
        <item name="keyboardViewStyle">@style/KeyboardView.ELECTRIC</item>
        <item name="mainKeyboardViewStyle">@style/MainKeyboardView.ELECTRIC</item>
        <item name="emojiPalettesViewStyle">@style/EmojiPalettesView.ELECTRIC</item>
        <item name="bigEmojiPalettesViewStyle">@style/BigEmojiPalettesView.ELECTRIC</item>
        <item name="stickerPalettesViewStyle">@style/StickerPalettesView.ELECTRIC</item>
        <item name="moreKeysKeyboardStyle">@style/MoreKeysKeyboard.ELECTRIC</item>
        <!-- Note: ICS theme uses the same style for both general more keys and action more keys. -->
        <item name="moreKeysKeyboardViewStyle">@style/MoreKeysKeyboardView.ELECTRIC</item>
        <item name="moreKeysKeyboardViewForActionStyle">@style/MoreKeysKeyboardView.ELECTRIC</item>
        <item name="suggestionStripViewStyle">@style/SuggestionStripView.ELECTRIC</item>
        <item name="suggestionWordStyle">@style/SuggestionWord.ELECTRIC</item>
        <item name="settingsPanelStyle">@style/SettingsPannel.ELECTRIC</item>
        <item name="fontSelectPanelStyle">@style/FontSelectPannel.ELECTRIC</item>


        <!-- reserved area ends here -->
    </style>

    <style name="Keyboard.ELECTRIC" parent="Keyboard"></style>

    <style name="KeyboardView.ELECTRIC" parent="KeyboardView">
        <item name="keyLabelSize">@fraction/config_key_label_ratio_pink</item>
        <item name="keyHintLetterRatio">@fraction/config_key_hint_letter_ratio_pink</item>
        <item name="keyLargeLetterRatio">@fraction/config_key_large_letter_ratio_electric</item>
        <item name="keyLabelOffCenterRatio">-55%</item>
        <item name="keyHintLabelRatio">@fraction/config_key_hint_label_ratio_electric</item>
        <item name="keyHintLabelOffCenterRatio">
            @fraction/config_key_hint_label_off_center_ratio_electric
        </item>
        <item name="keyPreviewTextRatio">@fraction/config_key_preview_text_ratio_pink</item>
        <item name="keyTextColor">#cccccc</item>
        <item name="functionalTextColor">#cccccc</item>
        <item name="keyHintLetterColor">#cccccc</item>
        <item name="keyHintLabelColor">#cccccc</item>
        <item name="keyPreviewTextColor">#ffffff</item>
        <item name="keyboardDominantColor">#222222</item>
    </style>

    <style name="MainKeyboardView.ELECTRIC" parent="KeyboardView.ELECTRIC">
        <item name="fontName">zekton_bold</item>
        <item name="hintTypeface">bold</item>
        <item name="keyLetterSize">@fraction/config_key_letter_ratio_electric</item>
        <item name="keyPreviewHeight">@dimen/config_key_preview_height</item>
        <item name="keyPreviewOffset">@dimen/config_key_preview_offset_electric</item>
        <item name="keyPreviewPaddingBottom">0dp</item>
        <item name="keyPreviewAnimatorType">flash</item>
        <item name="gestureFloatingPreviewTextColor">#ffffff</item>
        <item name="gestureFloatingPreviewColor">#cccccc</item>
        <item name="gestureTrailColor">#32a0ff</item>
        <item name="keyPopupHintLetterPaddingRight">
            @dimen/config_key_popup_hint_letter_padding_right_electric
        </item>
        <item name="keyPopupHintLetterPaddingTop">
            @dimen/config_key_popup_hint_letter_padding_top_electric
        </item>
        <item name="keyLanguageOnSpacePaddingRight">
            @dimen/config_key_language_on_space_padding_right_electric
        </item>
        <item name="keyLanguageOnSpacePaddingTop">
            @dimen/config_key_language_on_space_padding_top_electric
        </item>
        <item name="languageOnSpacebarTextColor">#cccccc</item>
        <item name="languageOnSpacebarTextShadowRadius">1.0</item>
        <item name="languageOnSpacebarTextShadowColor">#cccccc</item>
        <item name="keyTextShadowRadius">4.0</item>
        <item name="keyTextShadowDx">3.0</item>
        <item name="keyTextShadowDy">-3.0</item>
        <item name="keyTextShadowColor">#FF000000</item>
        <item name="keyFuncTextShadowRadius">4.0</item>
        <item name="keyFuncTextShadowDx">3.0</item>
        <item name="keyFuncTextShadowDy">-3.0</item>
        <item name="keyFuncTextShadowColor">#FF000000</item>
    </style>
    <!--
         Though {@link EmojiPalettesView} doesn't extend {@link KeyboardView}, some views inside it,
         for instance delete button, need themed {@link KeyboardView} attributes.
    -->
    <style name="EmojiPalettesView.ELECTRIC" parent="MainKeyboardView.ELECTRIC">
        <item name="categoryPageIndicatorColor">#BBFFFFFF</item>
        <item name="categoryPageIndicatorBackground">#33FFFFFF</item>
    </style>

    <style name="MoreKeysKeyboardView.ELECTRIC" parent="KeyboardView.ELECTRIC">
        <item name="keyTextColor">#ffffff</item>
        <item name="keyTextPressedColor">#ffffff</item>
        <item name="keyLetterSize">@fraction/config_morekeys_key_letter_ratio</item>
        <item name="fontName">normal</item>
        <item name="keyTextShadowRadius">0.0</item>
        <item name="keyTextShadowDx">-5.0</item>
        <item name="keyTextShadowDy">-5.0</item>
        <item name="keyTextShadowColor">#80000000</item>
    </style>

    <style name="SuggestionStripView.ELECTRIC" parent="KeyboardView.ELECTRIC">
        <item name="colorValidTypedWord">#1da9ff</item>
        <item name="colorTypedWord">#ffffff</item>
        <item name="colorAutoCorrect">#1da9ff</item>
        <item name="colorSuggested">#ffffff</item>
    </style>

    <style name="SettingsPannel.ELECTRIC" parent="KeyboardView.ELECTRIC">
        <item name="settingsTextColor">#bfffffff</item>
    </style>

    <style name="FontSelectPannel.ELECTRIC" parent="KeyboardView.ELECTRIC">
        <item name="fontDividerColor">#20ffffff</item>
        <item name="fontItemSelectedColor">#26ffffff</item>
        <item name="fontTextColor">#bfffffff</item>
    </style>

    <style name="SuggestionWord.ELECTRIC" parent="SuggestionWord">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/config_suggestion_text_size_pink</item>
    </style>

    <style name="MoreKeysKeyboard.ELECTRIC" parent="Keyboard.ELECTRIC">
        <item name="keyboardTopPadding">0%p</item>
        <item name="keyboardBottomPadding">0%p</item>
        <item name="horizontalGap">0%p</item>
        <item name="touchPositionCorrectionData">@null</item>
    </style>

    <style name="BigEmojiPalettesView.ELECTRIC" parent="EmojiPalettesView.ELECTRIC" />

    <style name="StickerPalettesView.ELECTRIC">
        <item name="android:background">#ff181818</item>
    </style>

    <style name="GifEmojiSearchTitleTextViewStyle.ELECTRIC" parent="GifEmojiSearchTitleTextViewStyle">
        <item name="android:textColor">@color/gif_emoji_search_hint_color_custom</item>
    </style>

    <style name="GifEmojiSearchContentTextViewStyle.ELECTRIC" parent="GifEmojiSearchTitleTextViewStyle">
        <item name="android:textColor">@color/gif_emoji_search_content_color_theme_common</item>
    </style>

    <style name="GifEmojiSearchSelectedTextViewStyle.ELECTRIC" parent="GifEmojiSearchSelectedTextViewStyle">
        <item name="android:textColor">@color/translucent_black</item>
    </style>
</resources>