<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="pref_screen">
    <PreferenceCategory android:title="@string/general">
        <Preference
            android:title="@string/theme_nav_languages"
            android:key="choose_language"/>

        <Preference
            android:title="@string/keyboard_settings"
            android:key="keyboard_settings"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/theme_store_more"
        android:key="more">
        <Preference
            android:title="@string/theme_nav_no_ads"
            android:key="removeAd"/>
        <Preference
            android:title="@string/text_privacy_policy"
            android:key="privacy_policy"/>
        <Preference
            android:title="@string/theme_nav_update"
            android:icon="@drawable/nav_update_icon"
            app:actionLayout="@layout/apk_update_indication_icon"
            android:key="update" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_category_debug"
        android:title="@string/text_debug">
        <Preference
            android:title="@string/text_debug"
            android:key="pref_debug" />
    </PreferenceCategory>

</PreferenceScreen>