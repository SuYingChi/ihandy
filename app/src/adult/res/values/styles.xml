<resources>

    <style name="CustomSettingCategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">18.3sp</item>
        <item name="typeface">@string/typeface_asap_medium</item>
    </style>

    <style name="CustomSettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">18.3sp</item>
        <item name="typeface">@string/typeface_asap_regular</item>
    </style>
</resources>
