<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/custom_title_toolbar" />


    <com.ihs.feature.common.TypefacedTextView
        style="@style/CustomSettingCategoryStyle"
        android:text="@string/setting_category_general" />


    <com.ihs.inputmethod.widget.CustomSettingItem
        android:id="@+id/setting_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:csi_icon="@drawable/ic_language"
        app:csi_text="@string/theme_nav_languages" />


    <com.ihs.inputmethod.widget.CustomSettingItem
        android:id="@+id/setting_keyboard_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:csi_icon="@drawable/ic_keyboard_setting"
        app:csi_text="@string/keyboard_settings" />


    <com.ihs.feature.common.TypefacedTextView
        style="@style/CustomSettingCategoryStyle"
        android:layout_marginTop="20dp"
        android:text="@string/setting_category_more" />


    <com.ihs.inputmethod.widget.CustomSettingItem
        android:id="@+id/setting_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:csi_icon="@drawable/ic_privacy"
        app:csi_text="@string/text_privacy_policy" />

</LinearLayout>