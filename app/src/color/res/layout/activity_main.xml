<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_standard"
    android:orientation="vertical"
    tools:context="com.keyboard.colorkeyboard.app.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/flash_lottie_animation"
        android:layout_centerHorizontal="true"
        app:layout_aspectRatio="100%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="60%"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <RelativeLayout
        android:id="@+id/bt_step_one"
        android:visibility="gone"
        style="@style/MainGuideBgStyle"
        android:layout_above="@+id/bt_step_two">

        <ImageView
            android:id="@+id/image_button_guide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/app_button_guide_1" />

        <FrameLayout
            android:id="@+id/view_choose_one_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/view_choose_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_button_guide_choose" />

            <ImageView
                android:id="@+id/view_enter_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_button_guide_enter" />

        </FrameLayout>

        <TextView
            android:id="@+id/text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:text="@string/toast_enable_keyboard"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_guide_textsize"
            android:textStyle="normal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bt_step_two"
        android:visibility="gone"
        style="@style/MainGuideBgStyle"
        android:layout_above="@+id/privacy_policy_text">

        <ImageView
            android:id="@+id/image_button_guide_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/app_button_guide_2" />

        <FrameLayout
            android:id="@+id/view_choose_two_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/view_choose_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_button_guide_choose" />

            <ImageView
                android:id="@+id/view_enter_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/app_button_guide_enter" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:text="@string/toast_select_keyboard"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_guide_textsize"
            android:textStyle="normal" />

    </RelativeLayout>


    <TextView
        android:id="@+id/privacy_policy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_main_logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/bt_design_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@drawable/entrance_customize_button"
            android:drawableLeft="@drawable/entrance_customize_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Create Your Own Keyboard"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_settings_textsize" />


        <LinearLayout
            android:id="@+id/settings_languages_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0"
                android:drawableLeft="@drawable/entrance_settings_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Settings"
                android:textColor="@color/home_text_selector"
                android:textSize="@dimen/button_settings_textsize" />

            <TextView
                android:id="@+id/bt_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:drawableLeft="@drawable/entrance_languages_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Languages"
                android:textColor="@color/home_text_selector"
                android:textSize="@dimen/button_settings_textsize" />

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionNone"
        android:inputType="textCapSentences|textAutoCorrect"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColorHint="#ff8f8f8f"
        android:visibility="gone"/>

</android.support.percent.PercentRelativeLayout>